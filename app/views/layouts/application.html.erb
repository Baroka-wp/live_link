<!DOCTYPE html>
<html>
<head>
  <title>LiveLink</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= Gon::Base.render_data %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <script src="//maps.google.com/maps/api/js?key=<%= ENV["GOOGLE_MAP_KEY"] %>"></script>
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</head>

<body>
<nav class="navbar navbar-expand-md navbar-dark bg-dark sticky-top">
  <div class="container">
    <% if user_signed_in? || band_signed_in? || live_house_signed_in? %>
      <%= link_to 'Live Link', lives_path, class: "navbar-brand" %>
    <% else %>
      <%= link_to 'Live Link', root_path, class: "navbar-brand" %>
    <% end %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar-content" aria-controls="navbar-content" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <!--ナビゲーション-->
    <div class="collapse navbar-collapse" id="navbar-content">
      <!--ナビゲーションメニュー-->
      <!--左側メニュー-->

      <ul class="navbar-nav mr-auto">
        <% unless user_signed_in? || band_signed_in? || live_house_signed_in? %>
          <li class="nav-item  dropdown">
            <a class="nav-link dropdown-toggle" href="" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              ログイン
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
              <%= link_to 'ユーザーログイン', new_user_session_path, class: "dropdown-item" %>
              <%= link_to 'バンドログイン', new_band_session_path, class: "dropdown-item" %>
              <%= link_to 'ライブハウスログイン', new_live_house_session_path, class: "dropdown-item" %>
            </div>
          </li>
          <li class="nav-item  dropdown">
            <a class="nav-link dropdown-toggle" href="" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              新規登録
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
              <%= link_to 'ユーザー登録', new_user_registration_path, class: "dropdown-item" %>
              <%= link_to 'バンド登録', new_band_registration_path, class: "dropdown-item" %>
              <%= link_to 'ライブハウス登録', new_live_house_registration_path, class: "dropdown-item" %>
            </div>
          </li>
        <% end %>
        <li class="nav-item">
          <%= link_to 'ライブ検索', lives_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to 'バンド検索', bands_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to 'ライブハウス検索', live_houses_path, class: "nav-link" %>
        </li>
      </ul>
      <!--右側メニュー-->
      <ul class="navbar-nav">
        <li class="nav-item active dropdown">
          <% if user_signed_in? %>
            <a class="nav-link dropdown-toggle" href="" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              マイページ
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
              <%= link_to t('views.my_page'), user_path(current_user), class: "dropdown-item" %>
              <%= link_to t('views.follow_band'), follow_band_page_user_path(current_user), class: "dropdown-item" %>
              <%= link_to t('views.edit_page'), edit_user_registration_path, class: "dropdown-item" %>
              <%= link_to t('views.log_out'), destroy_user_session_path, class: "dropdown-item" %>
            </div>
          <% elsif band_signed_in? %>
            <a class="nav-link dropdown-toggle" href="" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              マイページ
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
              <%= link_to t('views.my_page'), band_path(current_band), class: "dropdown-item" %>
              <%= link_to t('views.edit_page'), edit_band_registration_path, class: "dropdown-item" %>
              <%= link_to t('views.log_out'), destroy_band_session_path, class: "dropdown-item" %>
            </div>
          <% elsif live_house_signed_in? %>
            <a class="nav-link dropdown-toggle" href="" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              マイページ
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
              <%= link_to t('views.my_page'), live_house_path(current_live_house), class: "dropdown-item" %>
              <%= link_to t('views.edit_page'), edit_live_house_registration_path, class: "dropdown-item" %>
              <%= link_to t('views.log_out'), destroy_live_house_session_path, class: "dropdown-item" %>
            </div>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</nav>

<div class="container">
  <p id="notice"><%= notice %></p>
  <%= yield %>
</div>

</body>
</html>
