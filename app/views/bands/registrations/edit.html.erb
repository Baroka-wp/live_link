<h2 class="text-center">バンド情報編集ページ</h2>
<br>
<div class="container col-md-5">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put}) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <form class="needs-validation" novalidate>
      <div class="form-group">
        <label class="control-label"><%= f.label :email %></label>
        <%= f.email_field :email, class: 'form-control', autofocus: true, autocomplete: "email", required: true %>
        <% resource.errors.full_messages_for(:email).each do |message| %>
          <li class='list-unstyled text-danger'><%= message %></li>
        <% end %>
      </div>

      <div class="form-group">
        <label class="control-label"><%= f.label :name %></label>
        <%= f.text_field :name, class: 'form-control', autofocus: true, autocomplete: "name", required: true %>
        <% resource.errors.full_messages_for(:name).each do |message| %>
          <li class='list-unstyled text-danger'><%= message %></li>
        <% end %>
      </div>

      <div class='form-group'>
        <label class='control-label'><%= f.label :prefecture %></label>
        <%= f.select :prefecture, LiveHouse.prefectures.keys, {prompt: '選択してください'},
                     class: 'form-control btn-default', autofocus: true, required: true %>
        <% resource.errors.full_messages_for(:prefecture).each do |message| %>
          <li class='list-unstyled text-danger'><%= message %></li>
        <% end %>
      </div>

      <%# if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <!--    <div>Currently waiting confirmation for: <%#= resource.unconfirmed_email %></div>-->
      <%# end %>

      <!--  <div class="field">-->
