<h2>バンド情報編集ページ</h2>
<div class="devise_form">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put}) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <table>
      <tr>
        <th><%= f.label :email %></th>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
      </tr>

      <tr>
        <th><%= f.label :name %></th>
        <td><%= f.text_field :name, autofocus: true, autocomplete: "name" %></td>
      </tr>

      <tr>
        <th><%= f.label :prefecture %></th>
        <td><%= f.select :prefecture, Band.prefectures.keys, class: 'form-control btn btn-info', autofocus: true %></td>
      </tr>

      <%# if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <!--    <div>Currently waiting confirmation for: <%#= resource.unconfirmed_email %></div>-->
      <%# end %>

      <!--  <div class="field">-->
      <!--    <br>-->
      <!--    <p>下記はパスワード変更時のみ記入</p>-->
      <!--    <%#= f.label t('views.current_password') %>-->
      <%#= f.password_field :current_password, autocomplete: "current-password" %>
      <!--  </div>-->

      <!--  <div class="field">-->
      <!--    <%#= f.label t('views.new_password') %> <i>(6文字以上)</i>-->
      <%#= f.password_field :password, autocomplete: "new-password" %>
      <%# if @minimum_password_length %>

      <%# end %>
      <!--  </div>-->

      <!--  <div class="field">-->
      <!--    <%#= f.label t('views.new_password_confirmation') %>-->
      <%#= f.password_field :password_confirmation, autocomplete: "new-password" %>
      <!--  </div>-->
    </table>
    <div class="actions_submit">
      <%= f.submit t('views.update') %>
    </div>
  <% end %>

  <!--<h3>Cancel my account</h3>-->
  <!--<p>Unhappy? <%#= button_to "Cancel my account", registration_path(resource_name), data: {confirm: "Are you sure?"}, method: :delete %></p>-->
  <div class="devise_link">
    <%= link_to t('views.back'), :back %>
  </div>
</div>