<h2 class="text-center">バンドログイン</h2>

<div class="container">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <table class="table table-dark table-borderless table-sm col-sm-12 col-md-5" align="center">
      <tr>
        <th class="text-center"><%= f.label :email %></th>
        <td><%= f.email_field :email, class: 'col-11', autofocus: true, autocomplete: "email" %></td>
      </tr>

      <tr>
        <th class="text-center"><%= f.label :password %></th>
        <td><%= f.password_field :password, class: 'col-11', autocomplete: "current-password" %></td>
      </tr>

      <% if devise_mapping.rememberable? %>
        <tr>
          <th></th>
          <td><%= f.check_box :remember_me %> <%= "　" %> <%= f.label :remember_me %></td>
        </tr>
      <% end %>
      <tr>
        <th colspan='2'><%= f.submit t('views.log_in'), class: 'btn btn-block btn-secondary' %></th>
      </tr>
    </table>
  <% end %>

  <%= render "bands/shared/links" %>

  <div class="text-center">
    <br>
    <%= link_to 'ゲストバンドログイン', bands_guest_sign_in_path, method: :post %>
  </div>
</div>