<h2 class="text-center">バンドログイン</h2>
<br>
<div class="container col-md-4">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <form class='needs-validation' novalidate>
      <div class='form-group'>
        <label class='control-label'><%= f.label :email %></label>
        <%= f.email_field :email, class: 'form-control', placeholder: 'Eメールアドレス', autofocus: true, autocomplete: "email", required: true %>
      </div>

      <div class="form_group">
        <label class="control-label"><%= f.label :password %></label>
        <%= f.password_field :password, class: 'form-control', placeholder: 'パスワード', autocomplete: "current-password", required: true %>
      </div>

      <div class="form_group text-center">
        <% if devise_mapping.rememberable? %>
          <br>
          <label class='control-label'><%= f.check_box :remember_me %>　<%= f.label :remember_me %></label>
        <% end %>
      </div>
      <br>
      <%= f.submit t('views.log_in'), class: 'btn btn-block btn-info' %>
    </form>
  <% end %>
  <br>
  <%= render "bands/shared/links" %>
  <div class="text-center">
    <br>
    <%= link_to 'ゲストバンドログイン', bands_guest_sign_in_path, method: :post %>
  </div>
</div>