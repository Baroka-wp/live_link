<div class="container">
  <h2 class="text-center">ライブハウス検索フォーム</h2>
  <%= search_form_for @q do |f| %>
    <table class="table table-dark table-borderless table-sm col-sm-12 col-md-5" align="center">
      <tbody>
      <tr>
        <th class="text-center"><%= f.label t('views.live_house.name') %></th>
        <td><%= f.search_field :name_cont, class: 'col-11', id: 'search_live_house' %></td>
      </tr>
      <tr>
        <th class="text-center"><%= f.label t('views.live_house.prefecture') %></th>
        <td><%= f.select :prefecture_eq, LiveHouse.prefectures.keys.map {|k| [k, LiveHouse.prefectures[k]]}, {prompt: '選択してください'},
                         class: 'form-control col-11', id: 'search_prefecture', autofocus: true %></td>
      </tr>
      <tr>
        <th colspan='2'><%= f.submit class: 'btn btn-block btn-secondary' %></th>
      </tr>
      </tbody>
    </table>
  <% end %>
  <div class="text-center">
    <%= link_to "ライブを直接探す", lives_path, class: 'btn btn-secondary' %>
    <%= link_to "バンドから探す", bands_path, class: 'btn btn-secondary' %>
    <br><br>
  </div>
</div>

<div class="live_house_index">
  <h2 class="text-center">ライブハウス一覧</h2>
  <% @live_houses.each do |live_house| %>
    <table>
      <tbody>
      <tr>
        <th class="text-center"><%= live_house.prefecture %></th>
        <td><%= link_to live_house.name, live_house_path(live_house) %></td>
      </tr>
      </tbody>
    </table>
  <% end %>
  <%= paginate @live_houses %>
</div>