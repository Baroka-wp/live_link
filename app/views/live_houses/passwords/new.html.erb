<h2 class="top_title">パスワードの再発行</h2>
<div class="devise_form">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post}) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <table>
      <tr>
        <th><%= f.label :email %><br/>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
      </tr>
    </table>

    <div class="actions_submit">
      <%= f.submit t('views.send_me_reset_password') %>
    </div>
  <% end %>

  <%= render "live_houses/shared/links" %>
</div>