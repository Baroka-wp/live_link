<h2 class="text-center">ライブハウス情報編集</h2>
<br>
<div class="container col-md-5">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put}) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <form class="needs-validation" novalidate>
      <div class="form-group">
        <label class="control-label"><%= f.label :email %></label>
        <%= f.email_field :email, class: 'form-control', autofocus: true, autocomplete: "email", required: true %>
        <% resource.errors.full_messages_for(:email).each do |message| %>
          <li class='list-unstyled text-danger'><%= message %></li>
        <% end %>
      </div>

      <div class="form-group">
        <label class="control-label"><%= f.label :name %></label>
        <%= f.text_field :name, class: 'form-control', autofocus: true, autocomplete: "name", required: true %>
        <% resource.errors.full_messages_for(:name).each do |message| %>
          <li class='list-unstyled text-danger'><%= message %></li>
        <% end %>
      </div>

      <div class="form-group">
        <label class="control-label"><%= f.label :tel %></label>
        <%= f.telephone_field :tel, class: 'form-control', autofocus: true, autocomplete: "tel", required: true %>
        <% resource.errors.full_messages_for(:tel).each do |message| %>
          <li class='list-unstyled text-danger'><%= message %></li>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.fields_for :address do |m| %>
          <label class="control-label"><%= m.label t('views.live_house.address') %></label>
          <%= m.text_field :address, class: 'form-control', id: 'address', autofocus: true, autocomplete: "address", required: true %>
          <% resource.errors.full_messages_for(:address).each do |message| %>
            <li class='list-unstyled text-danger'><%= message %></li>
          <% end %>
        <% end %>
      </div>

      <%# if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <!--    <div>Currently waiting confirmation for: <%#= resource.unconfirmed_email %></div>-->
      <%# end %>

      <!--  <div class="field">-->
      <!--    <%#= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />-->
      <%#= f.password_field :password, autocomplete: "new-password" %>
      <%# if @minimum_password_length %>
      <!--      <br />-->
      <!--      <em><%#= @minimum_password_length %> characters minimum</em>-->
      <%# end %>
      <!--  </div>-->

      <!--  <div class="field">-->
      <!--    <%#= f.label :password_confirmation %><br />-->
      <%#= f.password_field :password_confirmation, autocomplete: "new-password" %>
      <!--  </div>-->

      <!--  <div class="field">-->
      <!--    <%#= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />-->
      <%#= f.password_field :current_password, autocomplete: "current-password" %>
      <!--  </div>-->
      <%= f.submit t('views.update'), class: 'btn btn-primary rounded-pill btn-block' %>
  <% end %>
  </form>

  <!--<h3>Cancel my account</h3>-->

  <!--<p>Unhappy? <%#= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>-->
  <br>
  <div class="text-center">
    <%= link_to t('views.back'), :back, class: 'btn btn-primary' %>
  </div>
</div>