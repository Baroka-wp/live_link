<h2 class="text-center">ユーザー新規登録</h2>
<br>
<div class="container col-md-5">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <form class="needs-validation" novalidate>
      <div class="form-group">
        <label class="control-label"><%= f.label t('views.user.email') %></label>
        <%= f.email_field :email, class: "form-control", id: "email", placeholder: "Eメールアドレス", autofocus: true, autocomplete: "email", required: true %>
        <% resource.errors.full_messages_for(:email).each do |message| %>
          <li class="list-unstyled text-danger"><%= message %></li>
        <% end %>
      </div>

      <div class="form-group">
        <label class="control-label"><%= f.label t('views.user.name') %></label>
        <%= f.text_field :name, class: "form-control", placeholder: "ユーザー名", autofocus: true, id: 'user_name', required: true %>
        <% resource.errors.full_messages_for(:name).each do |message| %>
          <li class="list-unstyled text-danger"><%= message %></li>
        <% end %>
      </div>

      <div class="form-group">
        <label class="control-label"><%= f.label t('views.user.ticket_name') %></label>
        <%= f.text_field :ticket_name, class: "form-control", placeholder: "チケット予約名", autofocus: true, id: 'ticket_name', required: true %>
        <% resource.errors.full_messages_for(:ticket_name).each do |message| %>
          <li class="list-unstyled text-danger"><%= message %></li>
        <% end %>
      </div>

      <div class="form-group">
        <label class="control-label"><%= f.label :password %></label>
        <%= f.password_field :password, class: "form-control", placeholder: "パスワード(6文字以上)", autocomplete: "new-password", id: 'new_password' %>
        <% resource.errors.full_messages_for(:password).each do |message| %>
          <li class="list-unstyled text-danger"><%= message %></li>
        <% end %>
      </div>

      <div class="form-group">
        <label class="control-label"><%= f.label :password_confirmation %></label>
        <%= f.password_field :password_confirmation, class: "form-control", placeholder: "パスワードを再度入力してください", autocomplete: "new-password", id: 'password_confirmation', required: true %>
        <% resource.errors.full_messages_for(:password_confirmation).each do |message| %>
          <li class="list-unstyled text-danger"><%= message %></li>
        <% end %>
      </div>

      <div class='text-center'>
        <br>
        <%= f.submit t('views.sign_up'), class: 'btn-primary rounded-pill btn-block' %>
      </div>
    </form>
    <br>
    <%= render "users/shared/links" %>
  <% end %>
</div>